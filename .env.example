# ==== Required ====
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE=
AUTH_SESSION_SECRET=
# Set to 0 for effectively permanent login (until logout/revocation).
AUTH_SESSION_TTL_SECONDS=604800

NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_GOOGLE_ADSENSE_CLIENT_ID=

# Roblox OAuth (login)
ROBLOX_OAUTH_CLIENT_ID=
ROBLOX_OAUTH_CLIENT_SECRET=
# Optional: force exact callback used by Roblox-only login flow.
# Example: https://bloxodes.com/auth/roblox/callback/login
# Legacy-compatible: https://bloxodes.com/auth/roblox/callback
ROBLOX_OAUTH_LOGIN_REDIRECT_URI=

# ==== Revalidation (optional but required for on-demand refresh) ====
REVALIDATE_ENDPOINT=
REVALIDATE_SECRET=

# ==== IndexNow (optional but recommended for faster indexing) ====
# Optional; defaults to https://bloxodes.com if omitted.
SITE_URL=
INDEXNOW_ENABLED=true
INDEXNOW_KEY=
# Example: https://bloxodes.com/<INDEXNOW_KEY>.txt
INDEXNOW_KEY_LOCATION=
# Optional override; defaults to https://api.indexnow.org/indexnow
INDEXNOW_ENDPOINT=

# ==== IndexNow bootstrap script (one-time bulk submission) ====
# Optional override; defaults to <SITE_URL>/sitemap.xml
INDEXNOW_BOOTSTRAP_SITEMAP_URL=
# Optional controls
INDEXNOW_BATCH_SIZE=1000
INDEXNOW_MAX_SITEMAPS=200
INDEXNOW_REQUEST_DELAY_MS=0
INDEXNOW_DRY_RUN=false
